				<script type="text/javascript">
					$(document).ready(function() {
						$('#tabs').tabs();
						$('#scouts_distrito_id').on('change', function() {
							loadSelect( $('#scouts_grupo_id') );
							clearSelect( $('#scouts_cargo_id') );
							$.getJSON(
								'<?php echo PUBLIC_PATH; ?>registro/getGrupos/' + $( this ).val(),
								function(data) {
									clearSelect( $('#grupo_id') );
									if ( data.status == 'OK' ) {
										clearSelect( $('#scouts_grupo_id') );
										$.each(data.grupos, function(i, grupo) {
											$('#scouts_grupo_id').append( new Option(grupo.nombre, grupo.id) );
										});
									}
								}
							);
						});

						$('#scouts_grupo_id').on('change', function() {
							loadSelect( $('#scouts_cargo_id') );
							// clearSelect( $('#cargo') );
							$.getJSON(
								'<?php echo PUBLIC_PATH; ?>registro/getCargos/' + $('#scouts_region_id').val() + '-' + $('#scouts_distrito_id').val() + '-' + $( this ).val(),
								function(data) {
									clearSelect( $('#scouts_cargo_id') );
									if ( data.status == 'OK' ) {
										$.each(data.cargos, function(i, item) {
											var cargo = item.nombre.replace(' No Aplica','');
											$('#scouts_cargo_id').append( new Option(cargo.replace(' Unidad',''), item.id) );
										});
									}
								}
							);
						});

						function clearSelect(objecto) {
							objecto.empty();
							objecto.append( new Option('--', 0) );
						}
						function loadSelect(objecto) {
							objecto.empty();
							objecto.append( new Option("Cargando...", "0") );
						}
					});
				</script>